{
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["svelte3"],
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": "off",
    "prettier/prettier": ["error", { "trailingComma": "es5" }],
    "react/prop-types": 0
  },
  "overrides": [
    {
      "files": "*.svelte",
      "processor": "svelte3/svelte3"
    }
  ]
}
